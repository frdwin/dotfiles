{
	"hyprland/workspaces": {
		"on-click": "activate",
		"active-only": false,
		"all-outputs": true,
		"format": "{name}",
		"persistent-workspaces": {
			"*": 4
		},
		"sort-by": "id"
	},
	"hyprland/window": {
		"format": "{}",
		"separate-outputs": true
	},
	"river/tags": {
		"num-tags": 5
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-muted": "{icon} muted",
		"on-click": "pavucontrol",
		"format-icons": {
			"headphone": "",
			"default": ""
		}
	},
	"bluetooth": {
		"format-on": " {num_connections} {status}",
		"format-off": " {status}",
		"interval": 30,
		"on-click": "blueman-manager"
	},
	"network": {
		"format-ethernet": " {ipaddr}",
		"format-wifi": " {ipaddr}",
		"format-disconnected": " {ipaddr}"
	},
	"idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "on-click": "~/bin/toggle_idle.sh"
    },
	"tray": {
		"icon-size": 24,
		"spacing": 8
	},
	"custom/chevron": {
		"format": "",
		"tooltip": false
	},
	"custom/exit": {
		"format": "",
		"on-click": "wlogout",
		"tooltip": false
	},
	"custom/vms": {
		"format": "",
		"on-click": "~/bin/startvm.sh",
		"tooltip": false
	},
	"custom/wp": {
		"format": "",
		"on-click": "~/bin/chwall.sh",
		"tooltip": false
	},
	"group/shortcuts": {
		"orientation": "horizontal",
		"modules": [
			"custom/wp",
			"custom/vms"
		]
	}
}

